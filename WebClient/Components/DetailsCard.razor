<FluentCard>
    @if (IsLoading)
    {
        <FluentProgressRing></FluentProgressRing>    
    }
    else if(TopSection == null || BottomSection == null)
    {
        <FluentLabel Typo="Typography.Body" Weight="FontWeight.Bold">No data provided</FluentLabel>
    }
    else
    {
        @foreach(var item in TopSection)
        {
            <FluentLabel Typo="Typography.Body" Weight="FontWeight.Bold">@item.Key</FluentLabel>
            <FluentLabel Typo="Typography.Body">@item.Value</FluentLabel>
        }
        <FluentDivider Style="width: 100%;"></FluentDivider>
        @foreach(var item in BottomSection)
        {
            <FluentLabel Typo="Typography.Body" Weight="FontWeight.Bold">@item.Key</FluentLabel>
            <FluentLabel Typo="Typography.Body">@item.Value</FluentLabel>
        }
        <FluentDivider Style="width: 100%;"></FluentDivider>
        @Actions
    }
</FluentCard>

@code {
    [Parameter]
    public required bool IsLoading { get; set; } = false;
    
    [Parameter] 
    public required Dictionary<string, string>? TopSection { get; set; }
    
    [Parameter] 
    public required Dictionary<string, string>? BottomSection { get; set; }
    
    [Parameter] 
    public RenderFragment? Actions { get; set; }
}