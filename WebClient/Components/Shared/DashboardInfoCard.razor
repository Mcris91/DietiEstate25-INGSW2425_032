<FluentCard>
  
  <FluentStack Orientation="Orientation.Vertical" VerticalGap="15">
    <FluentLabel Typo="Typography.H4">@Title</FluentLabel>
    <FluentStack Orientation="Orientation.Horizontal" HorizontalAlignment="HorizontalAlignment.Center">
      <FluentStack Orientation="Orientation.Vertical" HorizontalAlignment="HorizontalAlignment.Center">
        <FluentLabel Typo="Typography.H4" Color="Color.Accent">@LeftNumber</FluentLabel>
        <FluentLabel Typo="Typography.H5">@LeftInfo</FluentLabel>
      </FluentStack>
      <FluentStack Orientation="Orientation.Vertical" HorizontalAlignment="HorizontalAlignment.Center">
        <FluentLabel Typo="Typography.H4" Color="Color.Accent">@RightNumber</FluentLabel>
        <FluentLabel Typo="Typography.H5">@RightInfo</FluentLabel>
      </FluentStack>
    </FluentStack>
  </FluentStack>

</FluentCard>
@code {
  [Parameter]
  public required string Title { get; set; }
  [Parameter]
  public required string LeftNumber { get; set; }
  [Parameter]
  public required string LeftInfo { get; set; }
  [Parameter]
  public required string RightNumber { get; set; }
  [Parameter]
  public required string RightInfo { get; set; }
}